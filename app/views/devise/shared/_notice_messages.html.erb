<% if flash[:notice].present? || flash[:alert].present? %>
  <div class="space-y-2 mb-6">
    <% if notice.present? %>
      <p class="rounded-lg border border-green-200 bg-green-50 px-4 py-2 text-sm text-green-800"><%= flash[:notice] %></p>
    <% end %>
    <% if alert.present? %>
      <p class="rounded-lg border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700"> <%= flash[:alert] %></p>
    <% end %>
  </div>
<% end %>