<% if flash[:notice].present? || flash[:alert].present? %>
  <div class="max-w-[300px] mb-4 mx-auto inset-x-0 top-0 space-y-2">
    <% if notice.present? %>
      <p class="rounded-lg border border-green-200 bg-green-50 px-4 py-2 text-sm text-green-800 shadow-sm"><%= flash[:notice] %></p>
    <% end %>
    <% if alert.present? %>
      <p class="rounded-lg border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700 shadow-sm"><%= flash[:alert] %></p>
    <% end %>
  </div>
<% end %>
